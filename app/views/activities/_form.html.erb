<%= form_with(model: activity, local: true, class: 'form-horizontal') do |form| %>
      <div class="form-group <%= activity.errors[:customer_id].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Customer</label>
      <div class="col-sm-10">
        <%= form.select :customer_id, options_for_select(Customer.all.map{|s|[s.reason, s.id]}) %>
        <% if activity.errors[:customer_id].any? %>
          <span class="help-block m-b-none font-bold"><%= activity.errors[:customer_id].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= activity.errors[:subject].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Subject</label>
      <div class="col-sm-10">
        <%= form.text_field :subject, class: 'form-control' %>
        <% if activity.errors[:subject].any? %>
          <span class="help-block m-b-none font-bold"><%= activity.errors[:subject].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= activity.errors[:activity].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Activity</label>
      <div class="col-sm-10">
        <%= form.text_area :activity, class: 'form-control' %>
        <% if activity.errors[:activity].any? %>
          <span class="help-block m-b-none font-bold"><%= activity.errors[:activity].first %></span>
        <% end %>
      </div>
    </div>
      <div class="form-group <%= activity.errors[:subject].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Arquivo</label>
      <div class="col-sm-10">
        <%= form.file_field :file, class: 'form-control' %>
        <% if activity.errors[:subject].any? %>
          <span class="help-block m-b-none font-bold"><%= activity.errors[:subject].first %></span>
        <% end %>
      </div>
    </div>
    <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Cancelar', activities_path, :class => 'btn btn-white' %>     
        <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>