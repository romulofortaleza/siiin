<%= render 'header' %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Mostrando activity</h5>
        </div>
        <div class="ibox-content">
            <form class="form-horizontal">
                              <div class="form-group"><label class="col-sm-2 control-label">Customer</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">
                      <%= @activity.customer %>
                    </p>
                  </div>                  
                </div>
                              <div class="form-group"><label class="col-sm-2 control-label">Subject</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">
                      <%= @activity.subject %>
                    </p>
                  </div>                  
                </div>
                              <div class="form-group"><label class="col-sm-2 control-label">Activity</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">
                      <%= @activity.activity %>
                    </p>
                  </div>                  
                </div>
                <div class="form-group"><label class="col-sm-2 control-label">Anexo</label>
                  <div class="col-sm-10">
                    <p class="form-control-static">
                        <% if @activity.file.attached? %>
                         <%= link_to 'Visualizar Anexo', @activity.file, download: " " %>
                        <% else %>
                        <%= text_field_tag :file, 'Sem documento anexado', class: 'form-control', readonly: true %>
                        <% end %>
                    </p>
                  </div>                  
                </div>
                  <div class="hr-line-dashed">
              </div>                    
              <div class="form-group">
                  <div class="col-sm-4">
                      <%= link_to 'Voltar', activities_path, :class => 'btn btn-white' %>            
                      <%= link_to 'Editar', edit_activity_path(@activity), :class => "btn btn-primary" %>               
                  </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>  