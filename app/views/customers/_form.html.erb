<%= form_with(model: customer, local: true, class: 'form-horizontal') do |form| %>
      <div class="form-group <%= customer.errors[:reason].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Reason</label>
      <div class="col-sm-10">
        <%= form.text_field :reason, class: 'form-control' %>
        <% if customer.errors[:reason].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:reason].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= customer.errors[:cnpj].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Cnpj</label>
      <div class="col-sm-10">
        <%= form.text_field :cnpj, :id => 'cnpj', class: 'form-control', Placeholder: 'Somente números' %>
        <% if customer.errors[:cnpj].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:cnpj].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= customer.errors[:phone].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Phone</label>
      <div class="col-sm-10">
        <%= form.text_field :phone, class: 'form-control', id: 'telefone' %>
        <% if customer.errors[:phone].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:phone].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= customer.errors[:mayor].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Mayor</label>
      <div class="col-sm-10">
        <%= form.text_field :mayor, class: 'form-control' %>
        <% if customer.errors[:mayor].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:mayor].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= customer.errors[:cpf_mayor].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">Cpf mayor</label>
      <div class="col-sm-10">
        <%= form.text_field :cpf_mayor, class: 'form-control', id: 'cpf', placeholder: 'Somente Números' %>
        <% if customer.errors[:cpf_mayor].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:cpf_mayor].first %></span>
        <% end %>
      </div>
    </div>    
      <div class="form-group <%= customer.errors[:city_hall].any? ? 'has-error' : '' %>">
      <label class="col-sm-2 control-label">City hall</label>
      <div class="col-sm-10">
        <%= form.text_field :city_hall, class: 'form-control' %>
        <% if customer.errors[:city_hall].any? %>
          <span class="help-block m-b-none font-bold"><%= customer.errors[:city_hall].first %></span>
        <% end %>
      </div>
    </div>    
    <div class="hr-line-dashed"></div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
        <%= link_to 'Cancelar', clientes_path, :class => 'btn btn-white' %>     
        <%= form.submit 'Salvar', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
    $(document).ready(function(){ 
      $("#cnpj").mask("99.999.999/9999-99");
      $("#cpf").mask("999.999.999-99");

      var behavior = function (val) {
    return val.replace(/\D/g, '').length === 11 ? '(00) 00000-0000' : '(00) 0000-00009';
    },
    options = {
        onKeyPress: function (val, e, field, options) {
            field.mask(behavior.apply({}, arguments), options);
        }
    };

    $('#telefone').mask(behavior, options);
  });
</script>